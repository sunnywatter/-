/* 微信风格聊天页面 */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ededed;
  position: relative;
}

/* 顶部导航栏 - 微信风格 */
.chat-header {
  position: relative;
  z-index: 100;
  background: #393a3f;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}

.sprite-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #10aeff;
  border-radius: 8rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sprite-face {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sprite-eye {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 25rpx;
}

.left-eye { left: 22rpx; }
.right-eye { right: 22rpx; }

.sprite-mouth {
  width: 16rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  position: absolute;
  bottom: 22rpx;
  left: 50%;
  transform: translateX(-50%);
}

.header-info {
  flex: 1;
}

.chat-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 4rpx;
}

.chat-status {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

/* 聊天消息区域 - 微信风格 */
.messages-container {
  flex: 1;
  background: #ededed;
  position: relative;
  z-index: 10;
  padding: 20rpx 0;
}

/* 移除欢迎区域的大白背景 */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.welcome-sprite {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.large-sprite-head {
  width: 120rpx;
  height: 120rpx;
  background: #10aeff;
  border-radius: 12rpx;
  position: relative;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(16, 174, 255, 0.3);
}

.large-eye {
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 35rpx;
}

.large-eye.left { left: 28rpx; }
.large-eye.right { right: 28rpx; }

.large-mouth {
  width: 24rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 0 0 24rpx 24rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}

.welcome-text {
  font-size: 28rpx;
  color: #888;
  line-height: 1.6;
  background: #fff;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 快捷回复 - 微信风格 */
.quick-replies {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  width: 100%;
  max-width: 600rpx;
  padding: 0 20rpx;
}

.quick-reply-btn {
  background: #fff;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: left;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.quick-reply-btn:active {
  background: #f0f0f0;
}

/* 消息列表 - 微信风格 */
.messages-list {
  padding: 0 24rpx;
}

.message-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.message-item.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 32rpx;
}

.message-avatar.user {
  background: #10aeff;
}

.message-avatar.assistant {
  background: #07c160;
}

.avatar-icon {
  font-size: 32rpx;
  color: #fff;
}

.message-bubble {
  max-width: 70%;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  position: relative;
  word-break: break-word;
}

.message-bubble.user {
  background: #95ec69;
  color: #000;
  border-radius: 12rpx 12rpx 4rpx 12rpx;
  position: relative;
}

.message-bubble.user::after {
  content: '';
  position: absolute;
  right: -12rpx;
  bottom: 8rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-left-color: #95ec69;
  border-right: 0;
  border-bottom: 0;
}

.message-bubble.assistant {
  background: #fff;
  color: #000;
  border-radius: 12rpx 12rpx 12rpx 4rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.message-bubble.assistant::after {
  content: '';
  position: absolute;
  left: -12rpx;
  bottom: 8rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #fff;
  border-left: 0;
  border-bottom: 0;
}

.bubble-content {
  font-size: 32rpx;
  line-height: 1.4;
  word-break: break-word;
  white-space: pre-wrap;
}

.bubble-time {
  color: #999;
  font-size: 20rpx;
  margin-top: 8rpx;
  text-align: center;
}

/* 正在输入指示器 - 微信风格 */
.typing-indicator {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.typing-bubble {
  background: #fff;
  border-radius: 12rpx 12rpx 12rpx 4rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.typing-bubble::after {
  content: '';
  position: absolute;
  left: -12rpx;
  bottom: 8rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #fff;
  border-left: 0;
  border-bottom: 0;
}

.typing-dots {
  display: flex;
  gap: 6rpx;
  align-items: center;
}

.typing-dots .dot {
  width: 8rpx;
  height: 8rpx;
  background: #c8c8c8;
  border-radius: 50%;
  animation: typingDot 1.4s infinite ease-in-out;
}

.typing-dots .dot:nth-child(1) { animation-delay: 0s; }
.typing-dots .dot:nth-child(2) { animation-delay: 0.2s; }
.typing-dots .dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes typingDot {
  0%, 60%, 100% { 
    transform: scale(1); 
    opacity: 0.4; 
  }
  30% { 
    transform: scale(1.2); 
    opacity: 1; 
  }
}

/* 滚动锚点 */
.scroll-anchor {
  height: 20rpx;
}

/* 底部输入区域 - 微信风格 */
.input-container {
  position: relative;
  z-index: 1000;
  background: #f7f7f7;
  border-top: 1rpx solid #d9d9d9;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.input-wrapper {
  flex: 1;
  background: #fff;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  min-height: 80rpx;
  max-height: 200rpx;
  position: relative;
}

.message-input {
  width: 100%;
  min-height: 78rpx;
  max-height: 198rpx;
  padding: 16rpx 20rpx;
  background: transparent;
  border: none;
  font-size: 32rpx;
  line-height: 1.4;
  color: #333;
  resize: none;
}

.message-input::placeholder {
  color: #999;
  font-size: 32rpx;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.send-button:active {
  background: #06ad56;
}

.send-button.sending {
  opacity: 0.6;
  background: #c8c8c8;
}

.send-text {
  color: inherit;
  font-weight: inherit;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  min-height: 20rpx;
  background: #f7f7f7;
}

/* 移除背景装饰 */
.background-decoration {
  display: none;
}